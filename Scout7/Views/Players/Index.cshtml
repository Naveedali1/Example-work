@model IEnumerable<Scout7.Models.PlayersModel>

@{
    ViewBag.Title = "Index";
}

<h1>Players</h1>

<p>
    <button onclick="location.href='@Url.Action("Create", "Players")'" class="btn btn-large btn-danger">Create New Player</button>

    @using (Html.BeginForm())
    {
    <p>
        @Html.Label("Player Name:") @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control" } }) <br />
        @Html.Label("Player DOB:")   @Html.Editor("searchDob", new { htmlAttributes = new { @class = "form-control" } }) <br />
        @Html.Label("Player Club:")  @Html.Editor("searchClub", new { htmlAttributes = new { @class = "form-control" } }) <br />
   
        <button type="submit" class="btn btn-large btn-primary">Search</button> 
    </p>
    }



    <div id="Table" class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                   
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentClub)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentClub)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-xs btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn  btn-xs btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn  btn-xs btn-primary" })
                    </td>
                </tr>
            }

        </table>
    </div>




